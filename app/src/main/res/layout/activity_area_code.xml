<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_divider"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <com.baotianqi.valpromise.view.CleanableEditView
        android:id="@+id/cityInputText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_search_bg"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="5dp"
        android:gravity="left|center_vertical"
        android:hint="国家搜索"
        android:paddingLeft="10dp"
        android:textColor="@color/tv_3"
        android:textColorHint="#cfcfd8"
        android:textSize="12sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/country_lvcountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:divider="@color/color_divider"
            android:dividerHeight="1px" />

        <TextView
            android:id="@+id/dialog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/tv_3"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.baotianqi.valpromise.view.sortlistview.SideBar
            android:id="@+id/sidrbar"
            android:layout_width="30.0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />
    </FrameLayout>
</LinearLayout>
