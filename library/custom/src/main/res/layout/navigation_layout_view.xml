<?xml version="1.0" encoding="utf-8"?>
<com.baotianqi.custom.view.VpNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_bar_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_navigation_height"
    android:padding="3dp">

    <ImageButton
        android:id="@+id/btn_nav_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/tv_nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text=""
        android:textColor="#000A2E"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text="right"
        android:visibility="invisible" />

</com.baotianqi.custom.view.VpNavigationView>